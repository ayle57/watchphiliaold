{% extends 'templates/admins/nav/default.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block content %}

    {% if users %}
        <div class="table-responsive small">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">nom</th>
                    <th scope="col">prénom</th>
                    <th scope="col">pseudonyme</th>
                    <th scope="col">age</th>
                    <th scope="col">email</th>
                    <th scope="col">numéro de téléphone</th>
                    <th scope="col">url de l'image</th>
                    <th scope="col">role</th>
                    <th scope="col">supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.age }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.phone_number }}</td>
                        <td>{{ user.image_url }}</td>
                        <td>{{ user.role }}</td>
                        {% if user.role == 'ROLE_USER' %}
                            <td><a href="/admin/users/delete/{{ user.id }}" class="link text-danger"><i class="fa fa-x"></i></a></td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p>Pas d'utilisateurs</p>
    {% endif %}
{% endblock %}