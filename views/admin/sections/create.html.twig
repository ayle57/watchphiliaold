{% extends 'templates/admins/nav/default.html.twig' %}

{% block title %}Sections{% endblock %}

{% block section_title %}Créer Section{% endblock %}

{% block content %}
    <h2><a href="/admin/sections/"><button class="btn btn-secondary">Retourner aux Sections</button></a></h2>
    <div class="container">
        <form action="" method="POST">
            {% include 'templates/input.twig' with {
                input_name: 'name',
                input_type: 'text',
                input_placeholder: 'Nouveau Nom',
                input_id: 'name',
            } %}
            {% include 'templates/input.twig' with {
                input_name: 'min_price',
                input_type: 'number',
                input_placeholder: 'Nouveau prix minimum',
                input_id: 'min_price',
                div_class: 'mt-2'
            } %}
            {% include 'templates/input.twig' with {
                input_name: 'max_price',
                input_type: 'number',
                input_placeholder: 'Nouveau prix maximum',
                input_id: 'max_price',
                div_class: 'mt-2'
            } %}

            <div class="d-flex justify-content-center">
                <button class="btn btn-primary mt-4" name="submit">Créer</button>
            </div>

        </form>

        {% if errors %}
            <ul class="alert alert-danger mt-4 px-5">
                {% for error in errors %}
                    <li>
                        <span class="text-danger">
                            {{ error }}
                        </span>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>

{% endblock %}
