{% extends 'templates/admins/nav/default.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block section_title %}Créer Actualité{% endblock %}

{% block content %}
    <h2><a href="/admin/posts/"><button class="btn btn-secondary">Retourner aux Actualités</button></a></h2>
    <div class="container">
        <form action="" method="POST">
            {% include 'templates/input.twig' with {
                input_name: 'title',
                input_type: 'text',
                input_placeholder: 'Nouveau Titre',
                input_id: 'title',
            } %}

            <div class="form-group">
                <label for="content">Nouveau Contenu</label>
                <textarea name="content" id="content" cols="30" rows="10" class="form-control" placeholder="Nouveau Contenu"></textarea>
            </div>

            <div class="d-flex justify-content-center">
                <button class="btn btn-primary mt-4" name="submit">Créer</button>
            </div>

        </form>

        {% if errors %}
            <ul class="alert alert-danger mt-4 px-5">
                {% for error in errors %}
                    <li>
                        <span class="text-danger">
                            {{ error }}
                        </span>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>

{% endblock %}
