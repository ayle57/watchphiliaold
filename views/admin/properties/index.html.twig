{% extends 'templates/admins/nav/default.html.twig' %}

{% block title %}Propriétés{% endblock %}

{% block section_title %}Propriétés{% endblock %}

{% block content %}

    <h2><a href="/admin/properties/create"><button class="btn btn-secondary">Nouvelle Propriétée</button></a></h2>
    {% if properties %}
        <div class="table-responsive small">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">nom</th>
                    <th scope="col">modifier</th>
                    <th scope="col">supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for property in properties %}
                    <tr>
                        <td>{{ property.id }}</td>
                        <td>{{ property.name }}</td>
                        <td><a href="/admin/properties/edit/{{ property.id }}" class="link text-secondary"><i class="fa fa-pen"></i></a></td>
                        <td><a href="/admin/properties/delete/{{ property.id }}" class="link text-danger"><i class="fa fa-x"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p>Pas de Propriétés</p>
    {% endif %}

{% endblock %}
