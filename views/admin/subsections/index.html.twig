{% extends 'templates/admins/nav/default.html.twig' %}

{% block title %}Sous Sections{% endblock %}

{% block section_title %}Sous Sections{% endblock %}

{% block content %}

    <h2><a href="/admin/subsections/create"><button class="btn btn-secondary">Nouvelle Sous Section</button></a></h2>
    {% if subsections %}
        <div class="table-responsive small">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">nom</th>
                    <th scope="col">modifier</th>
                    <th scope="col">supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for subsection in subsections %}
                    <tr>
                        <td>{{ subsection.id }}</td>
                        <td>{{ subsection.name }}</td>
                        <td><a href="/admin/subsections/edit/{{ subsection.id }}" class="link text-secondary"><i class="fa fa-pen"></i></a></td>
                        <td><a href="/admin/subsections/delete/{{ subsection.id }}" class="link text-danger"><i class="fa fa-x"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p>Pas de Sous Sections</p>
    {% endif %}

{% endblock %}
